<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="#f4f4f4">


        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@drawable/fondo"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/user"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="Calculador de Sueldos"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="275dp"
                        android:background="@drawable/layouts_style"
                        android:gravity="center"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:text="Datos del Primer empleado"
                            android:textColor="#ff8000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtnombre1"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Nombres"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/txtapellidos1"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Apellidos"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/txtcargo1"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Cargo ejercido"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/txthorasMes1"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Horas trabajadas mensuales"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:text="0"
                            android:inputType="number"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="275dp"
                        android:background="@drawable/layouts_style"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:text="Datos del Segundo empleado"
                            android:textColor="#ff8000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtnombre2"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Nombres"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/txtapellidos2"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Apellidos"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/txtcargo2"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Cargo empleado"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/txthorasMes2"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Horas trabajadas mensuales"
                            android:padding="5dp"
                            android:text="0"
                            android:textSize="12sp"
                            android:inputType="number"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="275dp"
                        android:background="@drawable/layouts_style"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:text="Datos del Tercer empleado"
                            android:textColor="#ff8000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtnombre3"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Nombre Empleado"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/txtapellidos3"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Apellidos de empleado"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/txtcargo3"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Cargo empleado"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/txthorasMes3"
                            android:layout_width="300dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_style"
                            android:gravity="center"
                            android:hint="Horas trabajadas mensuales"
                            android:inputType="number"
                            android:padding="5dp"
                            android:text="0"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btncalcular"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/boton_calcular_style"
                        android:onClick="pasarDatosValidos"
                        android:text="Calcular Salarios"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>